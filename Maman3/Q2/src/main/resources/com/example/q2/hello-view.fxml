<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.StackPane?>
<StackPane alignment="CENTER"  xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.q2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <children>
        <Pane fx:id="pane" prefHeight="376.0" prefWidth="600.0" />
        <Button fx:id="clearBtn" mnemonicParsing="false" onAction="#Clear" text="Clear" />
        <Canvas fx:id="canv" height="200.0"  onMouseClicked="#Click"  width="200.0" />
    </children>
</StackPane>
